---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Coming Soon">
  <Navbar />
  <main
    class="min-h-screen flex flex-col items-center justify-center p-4 text-center"
  >
    <div class="max-w-2xl mx-auto">
      <h1 class="text-4xl md:text-6xl font-bold mb-4 text-white">Coming Soon</h1>
      <p class="text-lg md:text-xl text-gray-600 dark:text-gray-400 mb-8">
        We're working hard to bring you something amazing. Stay tuned!
      </p>
      <div class="flex gap-4 justify-center">
        <a
          href="/"
          class="px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors"
        >
          Return Home
        </a>
      </div>
    </div>
  </main>
  <Footer />
</Layout>
