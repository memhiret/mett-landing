---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
---

<Layout
  title="404: Page Not Found - METT"
  description="The page you're looking for doesn't exist."
>
  <Navbar />
  <div
    class="flex flex-col items-center justify-center min-h-screen p-4 text-center"
  >
    <h1 class="text-4xl font-bold text-memhirETYellow-500 mb-4">
      Oops, Where are you going?
    </h1>
    <p class="text-memhirETWhite-500 mb-8">
      The page you're looking for doesn't exist or has been moved.
    </p>
    <a
      href="/"
      class="bg-memhirETBlue-500 text-white px-6 py-2 rounded-lg hover:bg-memhirETBlue-700 transition-colors"
    >
      Go Home
    </a>
  </div>
</Layout>
