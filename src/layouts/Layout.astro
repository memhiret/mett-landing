---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="font-body">
    <div
      class="min-h-screen bg-gradient-to-br from-gray-950 via-gray-900 to-gray-950"
    >
      <div
        class="fixed inset-0 bg-gradient-to-br from-emerald-500/5 to-blue-500/5 pointer-events-none"
      >
      </div>

      <slot />
    </div>
  </body>
</html>

<style is:global>
  @font-face {
    font-family: "Bauhaus";
    src: url("/fonts/Bauhaus-Light.ttf") format("ttf");
    font-weight: 300;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "DM Sans";
    src: url("/fonts/DMSans-Light.ttf") format("ttf");
    font-weight: 300;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "DM Sans";
    src: url("/fonts/DMSans-Regular.ttf") format("ttf");
    font-weight: 400;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "DM Sans";
    src: url("/fonts/DMSans-Medium.ttf") format("ttf");
    font-weight: 500;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "DM Sans";
    src: url("/fonts/DMSans-Bold.ttf") format("ttf");
    font-weight: 700;
    font-style: normal;
    font-display: swap;
  }
</style>
